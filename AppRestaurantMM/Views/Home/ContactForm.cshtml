@model Contact
@{
    ViewData["Title"] = "ContactForm";
}

<h1>Contact Form</h1>
<form asp-action="ContactForm" method="post">
    <div class="mb-3">
    <label asp-for="FirstName">First Name</label>
    <input type="text" asp-for="FirstName" /><br>
    </div>
    <div class="mb-3">
    <label asp-for="LastName">Last Name</label>
    <input type="text" asp-for="LastName" /><br>
    </div>
    <div class="mb-3">
        <label asp-for="Email">Email</label>
        <input type="text" asp-for="Email" /><br>
    </div>
    <div class="mb-3">
    <label asp-for="Message">Message</label>
    <textarea style="height:200px" asp-for="Message" /></textarea><br>
    </div>

    <button class="btn btn-primary" type="submit">Submit</button>
</form>

